<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head'); %>
  </head>
  <body class="container">
    <header><%- include('../partials/header'); %></header>

    <main>
      <div class="jumbotron">
        <h1>Chukwuka's To Do List</h1>
        <%- include('../partials/form'); %>
        <table class="table">
          <thead>
            <tr>
              <th scope="col">S/N</th>
              <th scope="col">Name</th>
              <th scope="col">Description</th>
              <th scope="col">Edit</th>
              <th scope="col">Delete</th>
            </tr>
          </thead>
          <tbody>
            <%let i= 1;%> <% mascots.forEach(function(mascot) { %>
            <tr>
              <td scope="row"><%= i++ %></td>
              <td><%= mascot.name %></td>
              <td><%= mascot.done %></td>
              <td>
                <button
                  class="btn btn-outline-success my-2 my-sm-0"
                  type="submit"
                >
                  Edit
                </button>
              </td>
              <td>
                <form action="/todos/<%= mascot.id%>">
                  <button class="btn-danger my-2 my-sm-0" type="submit">
                    Delete
                  </button>
                </form>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </main>
    <footer><%- include('../partials/footer'); %></footer>
  </body>
</html>
